        </div>
      </div>
      <div class="company__right">
        <div class="company__img">
          <Image src={Company} alt="会社概要" />
        </div>
        <div class="company__link">
          <Btn link="/company" label="詳しく見る" small />
        </div>
      </div>
    </div>
  </div>
</section>

  <Close />
</Layout>


