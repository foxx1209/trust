---
// Config
// import { SITE } from "@src/config";
import { Image } from 'astro:assets';
import FV from "@components/FV.astro";
import Service from "../assets/images/service.png";
import ServiceBg from "../assets/images/service-bg.png";
import Support from "../assets/images/support-img.jpg";
import Support2 from "../assets/images/support-img2.jpg";
import SupportBg from "../assets/images/support-bg1.png";
import Company from "../assets/images/company.png";
import Close from "@components/Close.astro";
// Layout
import Layout from "@layouts//Layout.astro";
import Title from "@components/title.astro";
import TitleEn from "@components/titleEn.astro";
import Btn from "@components/Button.astro";
import CardCl from "@components/CardCl.astro";


---

<Layout title="トップページ" description="ページの紹介文">
  <FV />
<section class="serive" data-aos="fade-up" data-aos-duration="3000">
  <div class="service__inner">
    <div class="service__content">
      <div class="service__textarea">
        <hgroup class="">
          <TitleEn title="Service" />
          <h2 class="service__title">BtoBマーケティングを<br class="u-sp">次のステージへ。<br><span class="service__title-big">AI活用で、<span class="service__title-blue">より確実に</span>。</span></h2>
        </hgroup>
        <p class="p-serice__text">TrustLinkはBtoBマーケティングを科学的に支援する専門家チームです。 豊富な経験に基づく戦略立案と、AIを活用したデータ分析により、再現性のある成果を追求。 リード獲得から商談化までのプロセスを最適化し、御社のビジネス成長を着実に加速いたします。豊富な実績とAI活用を軸に、BtoB企業の成長に必要な要素をワンストップで提供し、確かな成果を実現します。</p>
        <div class="service__bg">
          <Image src={ServiceBg} alt="AI活用で、より確実に。" />
        </div>
      </div>
      <div class="service__img">
        <Image src={Service} alt="AI活用で、より確実に。" />
      </div>
    </div>
  </div>
</section>

<section class="support" data-aos="fade-up" data-aos-duration="3000">
  <div class="support__inner">
    <div class="support__content">
     <hgroup class="title title--row">
      <TitleEn title="Support" />
      <Title title="支援内容" />
    </hgroup> 
    <div class="support__cards">
      <div class="support__card">
        <figure class="supoort__img">
          <Image src={Support} alt="BtoBマーケティング支援" />
        </figure>
        <h3 class="support__title">BtoBマーケティング支援</h3>
        <ul class="support__list">
          <li class="support__item">・BtoB特化WEB広告運用</li>
          <li class="support__item">・インサイドセールス支援</li>
          <li class="support__item">・HubSpot導入支援 </li>
        </ul>
         <div class="support__btn">
          <Btn link="/btob" label="詳しく見る" small />
        </div>
       </div>
      <div class="support__card">
        <figure class="supoort__img">
          <Image src={Support2} alt="BtoBマーケティング支援" />
        </figure>
        <h3 class="support__title">生成AIソリューション支援</h3>
        <ul class="support__list">
          <li class="support__item">・AIリサーチ・データ分析支援</li>
          <li class="support__item">・AIコンテンツ作成支援援</li>
        </ul>
        <div class="support__btn">
          <Btn link="/ai" label="詳しく見る" small />
        </div>
      </div>
    </div>
  </div>
</div>
<div class="support__bg">
  <Image src={SupportBg} alt="BtoBマーケティング支援" />
</div> 
<div class="support__bg2">
  <Image src={SupportBg} alt="BtoBマーケティング支援" />
</div>
<div class="support__bg3">
  <Image src={SupportBg} alt="BtoBマーケティング支援" />
</div> 
<div class="support__bg4">
  <Image src={SupportBg} alt="BtoBマーケティング支援" />
</div>
</section>

<section class="column" data-aos="fade-up" data-aos-duration="3000">
  <div class="column__inner">
<hgroup class="title column__title">
<TitleEn title="Column" />
<Title title="コラム" />
</hgroup> 
<p class="p-column__text">BtoBマーケティングの成果向上に役立つノウハウや最新情報をお届けしています。</p>
   <div class="column__cards">
      <CardCl />
      <CardCl />
      <CardCl />
    </div>
    <div class="column__btn">
      <Btn link="/column" label="コラム一覧を見る" large />
    </div>
  </div>
</section>
<section class="campany" data-aos="fade-up" data-aos-duration="3000">
