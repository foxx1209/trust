---
import { Image } from "astro:assets";
import BtnWhite from "@components/Button-white.astro";
import Logo from "../assets/images/logo.png";
import FooterBg from "../assets/images/footer-bg1.png";
import FooterBg2 from "../assets/images/footer-bg2.png";
import FooterBgSP from "../assets/images/footer-bg-sp.png";
import FooterBgSP2 from "../assets/images/footer-bg-sp2.png";

const baseUrl = import.meta.env.BASE_URL;
---

    <footer class="footer">
      <div class="footer__inner">
        <div class="footer__content">
          <a href={`${baseUrl}`} class="footer__logo">
            <Image src={Logo} alt="logo" />
          </a>
          <nav class="footer__nav">
            <ul class="footer__list">
              <ul class="footer__list-support">
                <p class="footer__list-support-text">支援内容</p>
                <li class="footer__item">
                  <a href={`${baseUrl}btob`} class="footer__link footer__link-support">BtoBマーケティング支援</a>
                </li>
                <li class="footer__item">
                  <a href={`${baseUrl}ai`} class="footer__link footer__link-support">生成AIソリューション支援</a>
                </li>
                </ul>
                <ul class="footer__list-other">
                  <li class="footer__item">
                    <a href={`${baseUrl}column`} class="footer__link">コラム</a>
                  </li>
                  <li class="footer__item">
                    <a href={`${baseUrl}company`} class="footer__link">会社概要</a>
                  </li>
                  <li class="footer__item">
                    <a href={`${baseUrl}privacy`} class="footer__link">プライバシーポリシー</a>
                  </li>
                </ul>
              <div class="footer__btn-wrapper">
                <li class="footer__item">
                  <a href={`${baseUrl}form`} class="footer__link-btn--blue"><span>お問い合わせ</span></a>
                </li>
                <li class="footer__item footer__item-btn">
                  <a href={`${baseUrl}download-form`} class="footer__link footer__link-btn">
                    <span class="footer__link-btn-text">資料ダウンロード</span>
                  </a>
                </li>
            </div>
            </ul>
          </nav>
        </div>
        <small class="footer__copyright">©︎2024　株式会社TrustLink</small>
      </div>
      <div class="footer__bg">
        <Image src={FooterBg} alt="" />
      </div>
      <div class="footer__bg-2">
        <Image src={FooterBg2} alt="" />
      </div>
      <div class="footer__bg-sp">
        <Image src={FooterBgSP} alt="" />
      </div>
      <div class="footer__bg-sp-2">
        <Image src={FooterBgSP2} alt="" />
      </div>
    </footer>


<style>
  .footer {
    position: relative;
overflow-x: hidden;
inline-size: 100%;
position: relative;
z-index: var(--index-front);
padding-block-end: calc(20* var(--torem));
padding-block-start: calc(77* var(--torem));
@media(width >= 48rem) {
  padding-block-end: calc(30* var(--torem));
  padding-block-start: calc(87* var(--torem));
}


}

.footer__inner {
padding: 0 calc(20* var(--torem));
margin-inline: auto;
@media(width >= 48rem) {
  /* padding: 0 fluid( 10px 120px); */
  inline-size: min(100% - fluid( 10px 120px),1440px);
}
}

.footer__content {
  display: flex;
flex-direction: column;
align-items: center;
gap: calc(50* var(--torem));
@media(width >= 960px) {
align-items: center;
justify-content: space-between;
flex-direction: row;
gap: calc(50* var(--torem));
  
}
}

.footer__logo {
max-inline-size: calc(163* var(--torem));
inline-size: 100%;
img{
  aspect-ratio: 163 / 33;
  inline-size: 100%;
  block-size: 100%;
  object-fit: contain;
}
@media(width >= 48rem) {
  max-inline-size: calc(212* var(--torem));
  img{
    aspect-ratio: 212 / 42;
  }
}
}

.footer__nav {

}

.footer__list {
display: grid;
gap: calc(30* var(--torem));
text-align: center;
@media(width >= 960px) {
  display: flex;
  align-items: flex-start;
  gap:fluid(10px 40px);
  justify-content: center;
  text-align: left;
  
}
}.footer__list-support{
  display: grid;
  gap: calc(5* var(--torem));
  @media(width >= 960px) {
    gap: calc(10* var(--torem));
  }
}
.footer__list-support{
  font-size: calc(16* var(--torem));
  font-weight: 500;
}



.footer__item {
  margin-inline: auto;
  @media(width >= 960px) {
    margin-inline: initial;
  }


}

.footer__link {
font-size: calc(16* var(--torem));
font-weight:500;
color: #111111;
position: relative;
text-decoration: none;
transition: all 0.3s ease;
@media(width >= 48rem) {
  font-size: calc(16* var(--torem));
}
}
.footer__link-support{
  font-size: calc(14* var(--torem));
  font-weight: 400;
}


 

.footer__link {
  @media (any-hover: hover) {
    transition: 0.3s;
    &:hover {
      cursor: pointer;
      opacity: 0.6;
    }
  }
}
.footer__list-other{
  display: grid;
  text-align: center;
  gap: calc(30* var(--torem));
  @media(width >= 960px) {
    gap: calc(10* var(--torem));
    text-align: left;
  }
}


.footer__btn-wrapper{
  display: grid;
  gap: calc(15* var(--torem));
  @media(width >= 48rem) {
    gap: calc(20* var(--torem));
  }
 
}

.footer__link-btn{
  display: block;
  inline-size: calc(150* var(--torem));
  text-align: center;
  border-radius: 100px;
  padding: calc(9* var(--torem));
  letter-spacing: 0.05em;
  background: #FFFFFF;
  border-radius: 100px;
  position: relative;
  @media(width >= 48rem) {
    inline-size: calc(196* var(--torem));
    font-size: calc(16* var(--torem));
  }
}


@media (any-hover: hover) {
.footer__link-btn:hover{
  opacity:1;
}
.footer__link-btn:hover .footer__link-btn-text{
  opacity: 0.7 ;
  transition: all 0.3s ease;
}
}


.footer__link-btn-text{
background: linear-gradient(86.82deg, #20377A 4.26%, #2C85C5 92.99%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-fill-color: transparent;
  font-weight: 500;
  transition: all 0.3s ease;
  font-size: calc(12* var(--torem));
  @media(width >= 48rem) {
    font-size: calc(16* var(--torem));
  }
}

.footer__link-btn::after{
  content: "";
  border-radius:100px;
  display: block;
  position: absolute;
  top: -1px;
  left: -1px;
  z-index: -1;
  inline-size: calc(100% + 2px);
  block-size: calc(100% + 2px);
  background: linear-gradient(86.82deg, #20377A 4.26%, #2C85C5 92.99%);
  @media(width >= 48rem) {
    top: -1px;
  left: -1px;
    inline-size: calc(100% + 2px);

  }
}

.footer__link-btn--blue::before{
  content:"";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(86.82deg, #2C85C5 4.26%, #20377A 92.99%);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 0;
}
.footer__link-btn--blue{
inline-size: calc(150* var(--torem));
display: block;
text-decoration: none;
text-align: center;
color: var(--white);
font-size: calc(12* var(--torem));
font-weight: 500;
letter-spacing: 0.05em;
padding: calc(9* var(--torem));
background: linear-gradient(86.82deg, #20377A 4.26%, #2C85C5 92.99%);
border-radius: 100px;
position: relative;
overflow: hidden;
transition: all 0.3s ease;
@media(width >= 48rem) {
  font-size: calc(16* var(--torem));
  inline-size: calc(167* var(--torem));
}
}

@media (any-hover: hover) {
.footer__link-btn--blue:hover::before {
opacity: 1;
}
}

.footer__link-btn--blue span {
position: relative;
z-index: 1;
}

.footer__copyright{
  font-size: calc(12* var(--torem));
  letter-spacing: 0.13em;
  font-weight: 400;
  display: block;
  margin-block-start: calc(60* var(--torem));
  margin-inline: auto;
  inline-size: fit-content;
  @media(width >= 48rem) {
    margin-block-start: calc(182* var(--torem));
  }
}
.footer__bg {
display: none;
@media(width >= 48rem) {
  display: block;
  max-inline-size: calc(296* var(--torem));
  position: absolute;
  z-index: -1;
  bottom: calc(49* var(--torem));
  left: calc(114 / 1440 * 100%);
}
}

.footer__bg-2 {
display: none;
@media(width >= 48rem) {
  display: block;
  max-inline-size: calc(567* var(--torem));
  position: absolute;
  bottom: calc(21* var(--torem));
  right: calc(62* var(--torem));
  z-index: -1;
}
@media(width <= 915px) {
  right: calc(-149* var(--torem));
}
}

.footer__bg-sp {
  position: absolute;
  top: calc(73* var(--torem));
  left: 0;
display: block;
z-index: -1;
max-inline-size: calc(216* var(--torem));
inline-size: 100%;
@media(width >= 48rem) {
  display: none;
}
}

.footer__bg-sp-2 {
  position: absolute;
  bottom: 0;
  right: -10px;
display: block;
z-index: -1;
max-inline-size: calc(331* var(--torem));
inline-size: 100%;
@media(width >= 48rem) {
  display: none;
}

}


</style>
